{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "site": "reminder-b4527",
    "headers": [
      {
        "source": "/worker.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          },
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]  
      },
      {
        "source": "/firebase-messaging-sw.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          },
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]  
      }
    ],
    "rewrites": [
      {
        "source": "/worker.js",
        "destination": "/worker.js"
      },
      {
        "source": "/firebase-messaging-sw.js",
        "destination": "/worker.js"
      },
      {
        "source": "/api/**",
        "function": "app"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "runtime": "nodejs16",
      "ignore": [
        "node_modules/**"
      ]
    }  
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
